html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Entry Point
        link(rel="stylesheet" href="/style.css")
    body
        div(class="w-screen bg-purple-300 h-screen p-4 pb-8 flex flex-row justify-center items-center")
            form(
                method="POST"
                action="/chatroom/"
                class="bg-white p-8 flex flex-col rounded-md shadow-lg w-4/5 lg:w-1/2 "
            )
                label(for="name-input" class="text-xl") Your name
                input(
                    id="name-input"
                    name="name"
                    type="text"
                    class="flex-grow border-2 rounded-md focus:outline-none focus:border-gray-700 mt-2 p-1 border-gray-600 "
                )
                label(for="room-input" class="mt-4 text-xl") Chatroom name
                input(
                    id="rooom-input"
                    name="room"
                    type="text"
                    class="flex-grow border-2 rounded-md focus:outline-none focus:border-gray-700 mt-2 p-1 border-gray-600 "
                )
                button(
                    type="submit"
                    class="focus:outline-none focus:border-purple-700 border-transparent border-2  text-2xl bg-purple-500 text-white rounded-md mt-5 px-4"
                ) Start Chating